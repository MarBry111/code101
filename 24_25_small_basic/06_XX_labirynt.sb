' Ustawienia okna i kolory
GraphicsWindow.BackgroundColor = "White"
GraphicsWindow.BrushColor = "Blue"
GraphicsWindow.Title = "Maze Movement"
GraphicsWindow.Width = 400
GraphicsWindow.Height = 400

' Parametry siatki
cellSize = 40
gridWidth = 10
gridHeight = 10

' Definicja labiryntu: 0 - droga, 1 - Å›ciana
row[1] = "0111111111"
row[2] = "0000010001"
row[3] = "1111010101"
row[4] = "1000010101"
row[5] = "1011110101"
row[6] = "1000000101"
row[7] = "1111111101"
row[8] = "1000000001"
row[9] = "1011111101"
row[10]= "1000000000"

' Rysowanie labiryntu
Sub RysujLabirynt
  For y = 1 To gridHeight
    wzorzec = row[y]
    For x = 1 To gridWidth
      pole = Text.GetSubText(wzorzec, x, 1)
      xPix = (x - 1) * cellSize
      yPix = (y - 1) * cellSize

      If (pole = "1") Then
        GraphicsWindow.BrushColor = "Black"
      Else
        GraphicsWindow.BrushColor = "LightGray"
      EndIf
      GraphicsWindow.FillRectangle(xPix, yPix, cellSize, cellSize)
    EndFor
  EndFor
EndSub

RysujLabirynt()

playerX = 0
playerY = 0
GraphicsWindow.BrushColor = "Blue"
GraphicsWindow.FillRectangle(playerX, playerY, cellSize, cellSize)

GraphicsWindow.KeyDown = GraczPorusz

Sub GraczPorusz
  RysujLabirynt()
  przycisk = GraphicsWindow.LastKey
  
  stareX = playerX
  stareY = playerY
  
  If (przycisk = "Up") Then
    playerY = playerY - cellSize
  ElseIf (przycisk = "Down") Then
    playerY = playerY + cellSize
  ElseIf (przycisk = "Left") Then
    playerX = playerX - cellSize
  ElseIf (przycisk = "Right") Then
    playerX = playerX + cellSize
  EndIf
  
  kolor = GraphicsWindow.GetPixel(playerX, playerY) 
  
  If playerX < 0 Then
    playerX = stareX
  EndIf 
  
  If kolor = "#000000" Then
    playerX = stareX
    playerY = stareY
    endif
    
  
  GraphicsWindow.BrushColor = "Blue"
  GraphicsWindow.FillRectangle(playerX, playerY, cellSize, cellSize)
EndSub
